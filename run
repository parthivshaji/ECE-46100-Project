#!/bin/bash
# Entry point for the CLI

if [ "$1" = "install" ]; then
    npm install typescript ts-node @types/node --save-dev
    npm install node-fetch
    npm install axios 
    npm install fs
    npm install path
    npm install --save-dev jest nock
elif [ "$1" = "test" ]; then
    npm run test:coverage
else
    npm run build
    # Pass the arguments to the TypeScript compiled CLI
    node dist/cli.js "$@"
fi
